Public Class Form1

    Private imageNum As Integer = 0


    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        'add items to listbox
        ListBox1.Items.Add("Work")
        ListBox1.Items.Add("Bike Riding")
        ListBox1.Items.Add("Reading")
        ListBox1.Items.Add("Sleeping")
        ListBox1.Items.Add("Cleaning")
        ListBox1.Items.Add("Homework")
        ListBox1.Items.Add("Exercising")

        'add items to treeview
        TreeView1.Nodes.Add(New TreeNode("Fun Activities"))
        TreeView1.Nodes.Add(New TreeNode("Activities you're obligated to do"))



    End Sub

    Private Sub Button1_Click_1(sender As Object, e As EventArgs) Handles Button1.Click
        Dim C As TreeNode
        For Each C In TreeView1.Nodes
            If C.IsSelected Then
                ListBox1.Items.Add(C.Text)
                TreeView1.Nodes.Remove(TreeView1.SelectedNode)
            End If
        Next
    End Sub
    Private Sub Button2_Click(sender As Object, e As EventArgs) Handles Button2.Click
        ' move selected item from listbox to selected parent node
        Dim childnode As String
        If TreeView1.SelectedNode IsNot Nothing Then
            For Each item As String In ListBox1.SelectedItems.Cast(Of String)()
                childnode = ListBox1.SelectedItem
                TreeView1.SelectedNode.Nodes.Add(childnode)
                TreeView1.ExpandAll()
            Next
        Else
            MessageBox.Show("No items selected.")
        End If
        'delete selected item from listbox after it's been added to treeview
        Do While (ListBox1.SelectedItems.Count > 0)
            ListBox1.Items.Remove(ListBox1.SelectedItem)
        Loop

    End Sub

    Private Sub Button3_Click(sender As Object, e As EventArgs) Handles Button3.Click
        TreeView1.ExpandAll()
    End Sub

    Private Sub Button4_Click(sender As Object, e As EventArgs) Handles Button4.Click

    End Sub

    Private Sub Button5_Click(sender As Object, e As EventArgs) Handles Button5.Click
        TreeView1.CollapseAll()
    End Sub

    Private Sub Button6_Click(sender As Object, e As EventArgs) Handles Button6.Click
        TextBox1.Text = ListBox1.Items.Add(TextBox1.Text)
    End Sub

    Private Sub TrackBar1_Scroll(sender As Object, e As EventArgs) Handles TrackBar1.Scroll
        PictureBox1.Image = ImageList1.Images(imageNum)
        imageNum += 1
        If imageNum = 10 Then imageNum = 0
    End Sub

    Private Sub TreeView1_AfterSelect(sender As Object, e As TreeViewEventArgs) Handles TreeView1.AfterSelect

    End Sub

    Private Sub ListBox1_SelectedIndexChanged(sender As Object, e As EventArgs) Handles ListBox1.SelectedIndexChanged

    End Sub

    Private Sub Label1_Click(sender As Object, e As EventArgs) Handles Label1.Click

    End Sub

    Private Sub Label2_Click(sender As Object, e As EventArgs) Handles Label2.Click

    End Sub

    Private Sub TextBox1_TextChanged(sender As Object, e As EventArgs) Handles TextBox1.TextChanged

    End Sub

    Private Sub Button7_Click(sender As Object, e As EventArgs) Handles Button7.Click

    End Sub

    Private Sub Label3_Click(sender As Object, e As EventArgs) Handles Label3.Click

    End Sub

    Private Sub PictureBox1_Click(sender As Object, e As EventArgs) Handles PictureBox1.Click

    End Sub
End Class

